{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@orch-map/types": ["./packages/types/src"],
      "@orch-map/utils": ["./packages/utils/src"],
      "@orch-map/core": ["./packages/core/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "examples/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build"
  ]
}
